
<%= simple_form_for(@tweet) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="field">
    <div class="control">
      <%= f.input :tweet, label: "Tweeet about it", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new tweeet...", autofocus: true %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "button is-info" %>
  </div>
<% end %>
